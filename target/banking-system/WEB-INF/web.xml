<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <servlet-class>com.mybank.servlets.RegisterCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <url-pattern>/RegisterCustomerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OpenAccountServlet</servlet-name>
        <servlet-class>com.mybank.servlets.OpenAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OpenAccountServlet</servlet-name>
        <url-pattern>/OpenAccountServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DBTestServlet</servlet-name>
        <servlet-class>com.mybank.servlets.DBTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBTestServlet</servlet-name>
        <url-pattern>/DBTestServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>com.mybank.servlets.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/CustomerLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.mybank.servlets.TransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/TransactionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>ViewTransactionServlet</servlet-name>
    <servlet-class>com.mybank.servlets.ViewTransactionServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ViewTransactionServlet</servlet-name>
    <url-pattern>/ViewTransactionServlet</url-pattern>
</servlet-mapping>

    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>

</web-app>

